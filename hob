data = json.load(open("data.json"))
os.system('clear')
print ("Dictionary Application V 3.1")
print ("")
word = input("Enter a word to define : ")
word = word.lower()
os.system('clear')
void = 1
def define(word):
    print ("The definition of {} is ...".format(word))
    print (" ")
    print (data[word])
def caps(word):
    for y in data:
        if y.istitle():
            df=y.lower()
            if df == word:
                print ("The definition of {} is ...".format(y))
                print (" ")
                print (data[y])
def caps2(word):
    for x in data:
        if x.istitle():
df=x.lower()
            if df == word:
                void = 2
caps2(word)
if word in data:
    define(word)
elif void == 2 :
    caps(word)
else:
    print ("Sorry. Your word, {}, is not included in our Dictionary.".format(word))
